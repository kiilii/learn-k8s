{
    // protobuf setting
    "clang-format.style": "google",
    "protoc": {
        "path": "/usr/bin/protoc",
        "compile_on_save": true,
        "options": [
            "--proto_path=${workspaceRoot}/api",
            "--proto_path=${workspaceRoot}/third_party",
            "--go_out=paths=source_relative:${workspaceRoot}/api",
            "--go-http_out=paths=source_relative:${workspaceRoot}/api",
            "--go-grpc_out=paths=source_relative:${workspaceRoot}/api",
            "--openapi_out==paths=source_relative:${workspaceRoot}",
        ],
    },
    // dubug lunch
    "launch": {
        "compounds": [
            {
                "name": "start",
                "configurations": [
                    "getway.service",
                    "goods.service",
                    "user.service"
                ],
            }
        ],
        "configurations": [
            {
                "name": "getway.service",
                "type": "go",
                "request": "launch",
                "mode": "auto",
                "program": "${workspaceRoot}/app/api-getway/service/cmd/server/main.go",
                "args": [
                    "-conf",
                    "${workspaceRoot}/app/api-getway/service/config/config.yaml"
                ]
            },
            {
                "name": "goods.service",
                "type": "go",
                "request": "launch",
                "mode": "auto",
                "program": "${workspaceRoot}/app/goods/service/cmd/server/main.go",
                "args": [
                    "-conf",
                    "${workspaceRoot}/app/api-getway/service/config/config.yaml"
                ]
            },
            {
                "name": "user.service",
                "type": "go",
                "request": "launch",
                "mode": "auto",
                "program": "${workspaceRoot}/app/user/service/cmd/server/main.go",
                "args": [
                    "-conf",
                    "${workspaceRoot}/app/api-getway/service/config/config.yaml"
                ]
            }
        ],
    }
}